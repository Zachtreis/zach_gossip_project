<div class="card border-body m-5">
  <div class="card-header">
  	<h1>Editer mon potin</h1>
    </div>
    <%= form_tag url_for(action: 'update'), method: "patch" do %>
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<div class="card-body text-body">
			<div class="form-group">
            <h5><u>Prenom</u> :<%= text_field_tag 'first_name', @user.first_name, class: "form-control", placeholder: @user.first_name %></h5>
            <h5><u>Nom</u> :<%= text_field_tag 'last_name', @user.last_name, class: "form-control", placeholder: @user.last_name %></h5>
            <h5><u>Age</u> :<%= text_field_tag 'age', @user.age, class: "form-control", placeholder: @user.age %></h5>
            <h5><u>Email</u> :<%= text_field_tag 'email', @user.email, class: "form-control", placeholder: @user.email %></h5>
            <h5><u>Description</u> :<%= text_area_tag 'description', @user.description, class: "form-control", placeholder: @user.description %></h5>
			<br/> <br/>
			<%= submit_tag "Editer mon profil", class: "btn btn-body" %>
			<% end %>
    	</div>
    </div>
</div>

<% if @user.errors.any? %>
</br>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Sorry!</h4>
    <p>
      <p>We couldn't edit your profile for the following reason(s):</p>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </p>
    <%# <hr> %>
  </div>
<% end %>