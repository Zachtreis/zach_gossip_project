<div class="card border-body m-5">
  <div class="card-header text-center">

    <h1>A propos de <%= @city.name%></h1>
  </div>
  </br>

  <div class="accordion"  id="accordionExample">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h2 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
          Les Gossips de <%= @city.name%>
        </button>
      </h2>
    </div>

    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
      <div class="card-body">
      <div class="row justify-content-around">
      <% @gossips.each do |gossip| %>
        <div class="card border-primary bg-light mb-3 w-25 mx-5">
        <div class="card-body">
                <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
            <h4 class="card-title"><%= link_to "#{gossip.title.capitalize}", gossip_path(gossip.id) %></h4>
            <p class="card-text"><small class="text-muted">Likes: <%= gossip.likes.count %></small></p>
            <h5 class="card-subtitle text-muted"><%= gossip.user.first_name %> <%= gossip.user.last_name %></h5></br>
             <%= link_to "A propos de l'auteur", user_path(gossip.user.id), class: "btn-sm btn-success" %> 
                </div>
        </div>
    <% end %>
    </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header" id="headingTwo">
      <h2 class="mb-0">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Les auteurs de <%= @city.name%>
        </button>
      </h2>
    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
      <div class="card-body">
      <div class="row justify-content-around">
      <% @city.users.each do |user| %>
        <div class="card border-primary bg-light mb-3 w-25 mx-5">
        <div class="card-body">
                <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
            <h4 class="card-title"><%= link_to "#{user.first_name.capitalize} #{user.last_name.capitalize}", user_path(user.id) %></h4>
             <%= link_to "A propos de l'auteur", user_path(user.id), class: "btn-sm btn-success" %> 
                </div>
        </div>
    <% end %>
    </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header" id="headingThree">
      <h2 class="mb-0">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Les autres villes
        </button>
      </h2>
    </div>
    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
      <div class="card-body">
      <div class="row justify-content-around">
      <% @cities.each do |city| %>
        <div class="card border-primary bg-light mb-3 w-25 mx-5">
        <div class="card-body">
                <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
            <h4 class="card-title"><%= link_to "#{city.name.capitalize}", city_path(city.id) %></h4>
                </div>
        </div>
    <% end %>
    </div>
      </div>
    </div>
  </div>
</div>
  


 
  
