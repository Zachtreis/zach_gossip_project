<div class="card border-body mx-auto mt-5 mb-3" style="width: 400px;">
<div class="card-header"><h4>Conversations</h4></div>
 <div class="card-body">
   <div class="list-group w-100">
      <% @conversations.each do |conversation| %>
       <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
         <% if conversation.sender_id == current_user.id %>
           <% recipient = User.find(conversation.recipient_id) %>
         <% else %>
           <% recipient = User.find(conversation.sender_id) %>
         <% end %>
         <%= link_to recipient.first_name, conversation_messages_path(conversation), class:"list-group-item list-group-item-action" %>
       <% end %>
       <% end %>
     </div>
 </div>
</div>

